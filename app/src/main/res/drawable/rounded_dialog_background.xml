<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景主体 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 使用渐变背景替代纯色 -->
            <gradient
                android:angle="135"
                android:startColor="#FFFFFF"
                android:endColor="#F8F9FA"
                android:type="linear" />
            
            <!-- 圆角设置 -->
            <corners android:radius="18dp" />
            
            <!-- 添加轻微描边 -->
            <stroke
                android:width="0.5dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- 顶部装饰线 -->
    <item android:top="0dp" android:left="24dp" android:right="24dp" android:height="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A90E2"
                android:centerColor="#70AD47"
                android:endColor="#F08C32"
                android:type="linear" />
            <corners android:radius="1.5dp" />
        </shape>
    </item>
</layer-list>