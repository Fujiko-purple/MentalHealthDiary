<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 明显的圆角 -->
    <corners android:radius="15dp" />
    
    <!-- 半透明深粉色边框 -->
    <stroke
        android:width="2dp"
        android:color="#80FF6B9E" />
    
    <!-- 半透明粉色渐变背景 -->
    <gradient
        android:startColor="#90FDE1E9"
        android:endColor="#90FFCAD4"
        android:angle="45" />
</shape>