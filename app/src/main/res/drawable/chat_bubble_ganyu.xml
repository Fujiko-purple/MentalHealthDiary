<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 圆角设计 -->
    <corners android:radius="16dp" />
    
    <!-- 蓝色边框 - 稍微调整透明度 -->
    <stroke
        android:width="1.5dp"
        android:color="#805BC0EB" />
        
    <!-- 更透明的渐变背景 -->
    <gradient
        android:startColor="#90E1F5FE"
        android:endColor="#90D4EEFA"
        android:angle="45" />
</shape> 