<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层光晕 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#334A90E2"/>
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>
    </item>
    <!-- 内层圆形 -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#4A90E2"
                android:endColor="#2196F3"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list> 