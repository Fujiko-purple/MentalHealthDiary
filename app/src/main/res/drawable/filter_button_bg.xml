<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33000000">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#DDDDDD" />
                </shape>
            </item>
            <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#FDF8FF" />
                    <stroke android:width="1dp" android:color="#FFD0C5" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple> 