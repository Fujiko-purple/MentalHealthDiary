<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E6F8F7" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E6F8F7" />
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="#6EFFE2" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#DDDDDD" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="#E0E0E0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 