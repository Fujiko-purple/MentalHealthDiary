<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChartCardStyle">
        <item name="android:background">@drawable/chart_background</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>
    <style name="ExpandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#F8F8F8</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowColor">#50000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="CollapsedTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PlayModeSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">36dp</item>
        <item name="android:dropDownHorizontalOffset">-12dp</item>
        <item name="android:dropDownWidth">140dp</item>
        <item name="android:overlapAnchor">false</item>
    </style>
    <style name="TrainingCompleteDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/TrainingDialogAnimation</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="TrainingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources> 