<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChartCardStyle">
        <item name="android:background">@drawable/chart_background</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>
    <style name="ExpandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#F8F8F8</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowColor">#50000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="CollapsedTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PlayModeSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">36dp</item>
        <item name="android:dropDownHorizontalOffset">-12dp</item>
        <item name="android:dropDownWidth">140dp</item>
        <item name="android:overlapAnchor">false</item>
    </style>
    <style name="TrainingCompleteDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/TrainingDialogAnimation</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="TrainingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="ImportSuccessDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/ImportDialogAnimation</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="ImportDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/import_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/import_dialog_exit</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:popupElevation">4dp</item>
    </style>
    <style name="PopupMenuOverlapAnchor" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    <style name="ChatDeleteDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
    <style name="FullImageDialogTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="AIAssistantButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/ai_button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="MoodRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:background">@drawable/mood_radio_background</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="DateActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:stateListAnimator">@animator/button_press_animator</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">18dp</item>
        <item name="iconSize">16dp</item>
    </style>
    <style name="DateActionButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#009688</item>
        <item name="rippleColor">#1A009688</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="DateActionButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#009688</item>
        <item name="rippleColor">#52FFFFFF</item>
        <item name="elevation">2dp</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">#00BFA5</item>
        <item name="colorAccent">#00BFA5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:windowTitleStyle">@style/DatePickerTitleStyle</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowAnimationStyle">@style/DatePickerAnimation</item>
    </style>
    <style name="DatePickerTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#00BFA5</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00BFA5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">#33009688</item>
    </style>
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">#00BFA5</item>
        <item name="android:calendarTextColor">#333333</item>
        <item name="android:dayOfWeekTextAppearance">@style/DatePickerDayOfWeekStyle</item>
        <item name="android:yearListSelectorColor">#3300BFA5</item>
    </style>
    <style name="DatePickerDayOfWeekStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#666666</item>
    </style>
    <style name="DatePickerAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources> 