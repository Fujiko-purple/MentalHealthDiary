<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFDF8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时光穿梭机"
            android:textSize="20sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="4dp"/>
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="想回溯多久的记忆呢？"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/timeFilterGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/filter_week"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="刚刚过去的一周"
                android:textSize="16sp"
                android:textColor="#555555"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:buttonTint="#6EFFE2"
                android:layout_marginBottom="2dp"
                android:background="@drawable/selectable_item_background"/>

            <RadioButton
                android:id="@+id/filter_two_weeks"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="前两周的故事"
                android:textSize="16sp"
                android:textColor="#555555"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:buttonTint="#6EFFE2"
                android:layout_marginBottom="2dp"
                android:background="@drawable/selectable_item_background"/>

            <RadioButton
                android:id="@+id/filter_month"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="一个月的心情旅程"
                android:textSize="16sp"
                android:textColor="#555555"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:buttonTint="#6EFFE2"
                android:layout_marginBottom="2dp"
                android:background="@drawable/selectable_item_background"/>

            <RadioButton
                android:id="@+id/filter_all"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="回顾全部人生剧场"
                android:textSize="16sp"
                android:textColor="#555555"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:buttonTint="#6EFFE2"
                android:background="@drawable/selectable_item_background"/>
        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView> 