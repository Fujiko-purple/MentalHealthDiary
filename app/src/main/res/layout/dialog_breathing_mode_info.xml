<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/modeTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4A90E2"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:letterSpacing="0.05"/>

    <TextView
        android:id="@+id/modeRhythmText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rhythm_text_background"
        android:padding="16dp"
        android:gravity="center"
        android:elevation="2dp"/>

    <TextView
        android:id="@+id/benefitTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主要功效"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4A90E2"
        android:layout_marginBottom="12dp"
        android:drawableStart="@drawable/ic_benefits"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/modeBenefitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:lineSpacingExtra="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/musicInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:drawableStart="@drawable/ic_music_note"
        android:drawablePadding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/guideTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="练习指导"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:drawableStart="@drawable/ic_guide"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/modeGuideText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:lineSpacingExtra="6dp"
        android:layout_marginStart="4dp"/>

</LinearLayout> 